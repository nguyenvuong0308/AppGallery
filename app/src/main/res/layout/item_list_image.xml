<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/lnMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/ivEdit"
            android:background="@drawable/bg_edit"
            android:ellipsize="end"
            android:enabled="false"
            android:padding="4dp"
            android:singleLine="true"
            android:text="Messagssssssssssssssssssssssssssssssssssssssssssssssssssssssssssse"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_normal" />

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_three_dot" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnMessage"
        android:nestedScrollingEnabled="false"
        tools:listitem="@layout/item_1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:layout_marginBottom="9dp"
        android:layout_below="@+id/rcvImages"
        android:background="@color/color_gray_light_more" />
</RelativeLayout>