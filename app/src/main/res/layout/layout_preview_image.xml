<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:padding="15dp"
            android:src="@drawable/ic_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_actionbar" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/action_bar">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivWriterThumb"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_noimage"
                    app:civ_border_color="@color/color_gray"
                    app:civ_border_width="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvWriterName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:text="Minh Vương"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/ivActionMore"
                    app:layout_constraintStart_toEndOf="@+id/ivWriterThumb"
                    app:layout_constraintTop_toTopOf="@+id/ivWriterThumb" />

                <TextView
                    android:id="@+id/tvAlbumName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="Album 1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small"
                    app:layout_constraintBottom_toBottomOf="@+id/ivWriterThumb"
                    app:layout_constraintEnd_toStartOf="@+id/ivActionMore"
                    app:layout_constraintStart_toEndOf="@+id/ivWriterThumb" />

                <ImageView
                    android:id="@+id/ivActionMore"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_three_dot"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ivWriterThumb" />

                <TextView
                    android:id="@+id/tvMessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit"
                    android:enabled="false"
                    android:padding="4dp"
                    android:text="Messagssssssssssssssssssssssssssssssssssssssssssssssssssssssssssse"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal"
                    app:layout_constraintEnd_toEndOf="@+id/ivActionMore"
                    app:layout_constraintStart_toStartOf="@+id/ivWriterThumb"
                    app:layout_constraintTop_toBottomOf="@id/ivWriterThumb" />
            </android.support.constraint.ConstraintLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcvImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/header"
                tools:listitem="@layout/item_image_commment" />

            <view
                android:id="@+id/youtubeView"
                class="com.google.android.youtube.player.YouTubePlayerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                app:layout_constraintTop_toBottomOf="@+id/header" />

            <ImageView
                android:id="@+id/ivVideoThumb"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="@id/youtubeView"
                app:layout_constraintEnd_toEndOf="@id/youtubeView"
                app:layout_constraintStart_toStartOf="@id/youtubeView"
                app:layout_constraintTop_toTopOf="@id/youtubeView" />

            <ImageView
                android:id="@+id/ivPlay"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:src="@drawable/ic_play_2"
                app:layout_constraintBottom_toBottomOf="@id/youtubeView"
                app:layout_constraintEnd_toEndOf="@id/youtubeView"
                app:layout_constraintStart_toStartOf="@id/youtubeView"
                app:layout_constraintTop_toTopOf="@id/youtubeView" />

            <ImageView
                android:id="@+id/ivDownload"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:layout_below="@+id/youtubeView"
                android:padding="15dp"
                android:src="@drawable/ic_download"
                android:tint="@color/color_gray_dark"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/youtubeView" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>

